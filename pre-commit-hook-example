#!/bin/sh
# Pre-commit hook to enforce design principles and code quality
# Copy this file to .git/hooks/pre-commit and make it executable

echo "Running EMSP code quality checks..."

# Detect if we're on Windows (Git Bash/MSYS) or Unix-like system
if [ -f "lint.bat" ]; then
    # On Windows, run the batch file
    if command -v cmd.exe >/dev/null 2>&1; then
        # Windows with cmd.exe available
        cmd.exe /c "lint.bat"
    else
        # Git Bash on Windows
        ./lint.bat
    fi
else
    echo "Error: lint.bat not found in repository root"
    exit 1
fi

if [ $? -ne 0 ]; then
    echo ""
    echo "❌ Commit rejected due to code quality issues"
    echo "Please fix the issues or add documentation justifications before committing"
    echo ""
    echo "Examples of valid justifications:"
    echo "  // Performance critical: tight loop for market data processing"
    echo "  /// @brief Legacy API compatibility requires raw pointer management"  
    echo "  /** NOTE: Manual memory management required for plugin interface */"
    echo ""
    exit 1
fi

echo "✅ All code quality checks passed"
exit 0
